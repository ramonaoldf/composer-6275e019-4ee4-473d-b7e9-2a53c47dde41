#!/usr/bin/env bash

DIR="$( cd "$( dirname "${BASH_SOURCE[0]}" )" && pwd )"

if [ ! -f "$DIR/valet.php" ]
then
    OLDPWD=$PWD
    cd $DIR/../laravel/valet
    DIR=$(pwd)
    cd $OLDPWD
fi

if [[ $1 = "install" ]] || [[ $1 = "restart" ]] || [[ $1 = "stop" ]] || [[ $1 = "uninstall" ]]
then
    sudo php $DIR/valet.php $@
elif [[ $1 = "share" ]]
then
    bash $DIR/fetch-share-url.sh &
    $DIR/bin/ngrok http -host-header=rewrite ${PWD##*/}.dev:80
else
    php $DIR/valet.php $@
fi

